[% WRAPPER 'include/layout.tt' %]

<div class="row">
    <div class="span16">
		<h1>Edit [% name %]</h1>
		<form method="post" action="[% uri_for('/e/' _ uri(name) _ '/edit') %]">
			<input type="hidden" name="name" value="[% name %]" />
			<textarea name="body" placeholder="Body here">[% body %]</textarea>
			<input type="submit" value="Create" class="btn primary" />
		</form>
    </div>
</div>

[% END %]
